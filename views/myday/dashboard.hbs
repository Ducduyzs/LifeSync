<div class="dashboard-container bg-pink-50 min-h-screen">
  <main class="p-8">
    <div class="date-navigation d-flex justify-content-between align-items-center mb-4">
      <button id="prevDate" class="btn-nav">
        <i class="bi bi-chevron-left"></i>
      </button>
      <div class="d-flex align-items-center gap-3">
        <h2 id="dateTitle" class="text-xl fw-semibold m-0"></h2>
        <button id="todayBtn" class="btn-today">Today</button>
      </div>
      <button id="nextDate" class="btn-nav">
        <i class="bi bi-chevron-right"></i>
      </button>
    </div>

    <p class="text-gray-600 mb-5 text-center">"You got this ðŸ’ª"</p>

    <div id="taskList" class="space-y-4">
      {{#if tasks.length}}
        {{#each tasks}}
          <div class="task-item flex justify-between items-center bg-white rounded-2xl shadow p-4 border border-pink-100">
            <div class="flex items-center gap-3">
              <input type="checkbox" {{#if this.is_done}}checked{{/if}} />
              <span class="font-medium">{{this.title}}</span>
            </div>
            <div class="flex items-center gap-4 text-gray-600 text-sm">
              {{#if this.start_time}}
                <span><i class="bi bi-clock"></i> {{formatTime this.start_time}}â€“{{formatTime this.end_time}}</span>
              {{/if}}
              {{#if this.tag_title}}
                <span class="bg-pink-100 text-pink-600 px-2 py-1 rounded-lg text-xs">#{{this.tag_title}}</span>
              {{/if}}
              {{#if this.priority}}
                <span class="text-yellow-500"><i class="bi bi-star-fill"></i> {{this.priority}}</span>
              {{/if}}
            </div>
          </div>
        {{/each}}
      {{else}}
        <p class="text-gray-500 text-center">No tasks for today yet ðŸŒ¤</p>
      {{/if}}
    </div>
  </main>
</div>
