<!-- PROJECT DETAIL VIEW MODAL -->
<div id="projectDetailModal" class="task-modal">
  <div id="projectDetailBox"
       class="task-modal-content relative w-full max-w-2xl mx-auto pt-10 pb-6 px-6">

    <button id="closeProjectDetail"
            class="absolute top-3 right-3 p-2 rounded-full text-gray-500 hover:bg-gray-200 hover:text-gray-700 transition">
      <i class="bi bi-x-lg"></i>
    </button>

    <!-- CLICKABLE HEADER (OPEN EDIT FORM) -->
    <div class="bg-white p-4 rounded-2xl shadow flex justify-between items-center
                border border-pink-100 mb-6 project-detail-trigger cursor-pointer
                hover:bg-pink-50 transition">
      
      <div class="flex items-center gap-3">
        <span id="pdColorDot" class="w-3 h-3 rounded-full border"></span>
        <h2 id="pdTitle" class="font-medium text-gray-800"></h2>
      </div>

      <div class="flex items-center gap-4 text-gray-600 text-sm">
        <span id="pdTime"></span>
        <span id="pdTag2" class="bg-pink-100 text-pink-600 px-2 py-1 rounded-lg text-xs"></span>
        <span id="pdPriority"></span>
      </div>
    </div>

    <!-- TREE LEVEL -->
    <div id="pdTreeArea" class="mt-4 tree-container"></div>

  </div>
</div>



<!-- PROJECT DELETE CONFIRM MODAL -->
<div id="projectDeleteModal" class="task-modal hidden">
  <div class="task-modal-content w-full max-w-sm mx-auto p-6 rounded-2xl bg-white">
    <h3 class="text-lg font-semibold text-red-600 mb-3">Confirm Delete</h3>
    <p class="text-gray-600 mb-6">Are you sure you want to delete this project?</p>

    <div class="flex justify-end gap-3">
      <button id="cancelProjectDelete"
              class="px-4 py-2 rounded-lg bg-gray-200 hover:bg-gray-300">
        Cancel
      </button>

      <button id="confirmProjectDelete"
              class="px-4 py-2 rounded-lg bg-red-500 text-white hover:bg-red-600">
        Delete
      </button>
    </div>
  </div>
</div>



<!-- PROJECT DETAIL FORM MODAL -->
<div id="projectDetailFormModal" class="task-modal hidden">
  <div id="projectDetailFormBox"
       class="task-modal-content">
    <button id="closeProjectDetailInner" class="absolute top-3 right-4 text-gray-400 hover:text-gray-600">
      <i class="bi bi-x-lg"></i>
    </button>
  </div>
</div>


<div id="nodeDetailModal" class="task-modal hidden">
  <div class="task-modal-content relative">

    <button
      id="closeNodeDetailModal"
      class="absolute top-3 right-4 text-gray-400 hover:text-gray-600"
    >
      <i class="bi bi-x-lg"></i>
    </button>

    <div id="nodeDetailBox"></div>

  </div>
</div>
