<div id="projectDetailModal" class="task-modal">
  <div id="projectDetailBox"
       class="task-modal-content relative w-full max-w-2xl mx-auto pt-10 pb-6 px-6">

    <button id="closeProjectDetail"
            class="absolute top-3 right-3 p-2 rounded-full text-gray-500 hover:bg-gray-100 hover:text-gray-700 transition">
      <i class="bi bi-x-lg"></i>
    </button>

    <!-- TOP INFO BAR (task-style) -->
    <div class="bg-white p-4 rounded-2xl shadow flex justify-between items-center border border-pink-100 mb-6">

      <div class="flex items-center gap-3">
        <span id="pdColorDot" class="w-3 h-3 rounded-full border"></span>
        <h2 id="pdTitle" class="font-medium text-gray-800"></h2>
      </div>

      <div class="flex items-center gap-4 text-gray-600 text-sm">
        <span id="pdTime"></span>
        <span id="pdTag2" class="bg-pink-100 text-pink-600 px-2 py-1 rounded-lg text-xs"></span>
        <span id="pdPriority"></span>
      </div>

    </div>

    <!-- BUTTONS -->
    <div class="flex gap-4 justify-center pb-2">
      <button id="btnAddBranch"
              class="px-6 py-2 bg-pink-200 rounded-xl text-pink-700 hover:bg-pink-300 transition flex items-center gap-2">
        <i class="bi bi-node-plus text-base"></i>
        <span class="text-sm">Add Branch</span>
      </button>

      <button id="btnDeleteProject"
              class="px-6 py-2 bg-red-200 rounded-xl text-red-700 hover:bg-red-300 transition flex items-center gap-2">
        <i class="bi bi-trash text-base"></i>
        <span class="text-sm">Delete</span>
      </button>

    </div>

    <div id="pdTreeArea" class="mt-4"></div>

  </div>
</div>

<div id="projectDeleteModal" class="task-modal hidden">
  <div class="task-modal-content w-full max-w-sm mx-auto p-6 rounded-2xl bg-white">
    <h3 class="text-lg font-semibold text-red-600 mb-3">Confirm Delete</h3>
    <p class="text-gray-600 mb-6">Are you sure you want to delete this project?</p>

    <div class="flex justify-end gap-3">
      <button id="cancelProjectDelete" class="px-4 py-2 rounded-lg bg-gray-200 hover:bg-gray-300">Cancel</button>
      <button id="confirmProjectDelete" class="px-4 py-2 rounded-lg bg-red-500 text-white hover:bg-red-600">Delete</button>
    </div>
  </div>
</div>
