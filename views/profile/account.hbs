<div class="min-h-screen bg-rose-50 flex justify-center py-10">
  <div class="w-full max-w-5xl bg-white rounded-2xl shadow-lg overflow-hidden">
    <div class="flex">
      <div class="w-64 border-r border-gray-100 bg-gray-50 p-6">
        <div class="flex flex-col items-center text-center">
          <i class="bi bi-person-circle text-6xl text-gray-400"></i>
          <div class="mt-3 font-semibold text-gray-800">
            {{user.full_name}}
          </div>
          <div class="text-sm text-gray-500">
            LifeSync account
          </div>
        </div>

        <div class="mt-6 space-y-2">
          <a
            href="/health/profile"
            class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-rose-50 text-gray-700"
          >
            <i class="bi bi-heart-fill text-rose-400"></i>
            <span>Health profile</span>
          </a>

          <div
            class="flex items-center gap-3 px-4 py-2 rounded-lg bg-rose-100 text-rose-600 font-medium"
          >
            <i class="bi bi-person"></i>
            <span>Account profile</span>
          </div>

          <a
            href="/settings"
            class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-gray-100 text-gray-700"
          >
            <i class="bi bi-gear"></i>
            <span>Settings</span>
          </a>
        </div>
      </div>

      <div class="flex-1 p-8">
        <h2 class="text-xl font-semibold text-gray-800 mb-6">
          Account information
        </h2>

        <form
          method="POST"
          action="/profile/update"
          class="space-y-6 max-w-xl"
        >
          <div>
            <label class="block text-sm text-gray-600 mb-1">
              Full name
            </label>
            <input
              type="text"
              name="full_name"
              value="{{user.full_name}}"
              required
              class="w-full rounded-xl border border-gray-200 px-4 py-2 focus:ring-2 focus:ring-rose-200 focus:outline-none"
            />
          </div>

          <div>
            <label class="block text-sm text-gray-600 mb-1">
              Email
            </label>
            <input
              type="email"
              value="{{user.email}}"
              disabled
              class="w-full rounded-xl border border-gray-200 bg-gray-100 px-4 py-2 text-gray-500"
            />
          </div>

          <div>
            <label class="block text-sm text-gray-600 mb-1">
              Password
            </label>
            <input
              type="password"
              value="********"
              disabled
              class="w-full rounded-xl border border-gray-200 bg-gray-100 px-4 py-2 text-gray-500"
            />
            <a
              href="/auth/change-password"
              class="text-sm text-rose-500 hover:underline mt-1 inline-block"
            >
              Change password
            </a>
          </div>

          <div class="pt-4 flex gap-3">
            <button
              type="submit"
              class="px-6 py-2 rounded-xl bg-rose-500 text-white hover:bg-rose-600 transition"
            >
              Save changes
            </button>

            <button
              type="reset"
              class="px-6 py-2 rounded-xl border border-gray-300 text-gray-600 hover:bg-gray-100"
            >
              Cancel
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
