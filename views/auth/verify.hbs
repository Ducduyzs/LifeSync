<section class="auth-hero">
  <div class="auth-container">
    <div class="auth-card">
      <h3 class="text-center mb-3 fw-bold">Verify Email</h3>
      <p class="text-muted small text-center mb-3">
        We sent a code to {{email}}. Please enter it below.
      </p>

      <form method="POST" action="/auth/verify">
      
        <input type="hidden" name="email" value="{{email}}">
        <input type="hidden" name="next" value="{{next}}">

        <label class="field">
          <span>OTP Code</span>
          <div class="control">
            <i class="bi bi-shield-lock"></i>
            <input type="text" name="otp" placeholder="Enter 6-digit OTP" required>
          </div>
        </label>
        <button class="btn-primary w-100 mt-3" type="submit">Verify Account</button>
      </form>

      <div class="text-center small mt-3">
        <span id="resendText">Didnâ€™t receive the code?</span>
        <button
            id="resendBtn"
            class="btn btn-link p-0 ms-1"
            data-email="{{email}}"
            disabled
          >
            Resend OTP (<span id="countdown">60</span>s)
        </button>

      </div>
    </div>
  </div>
</section>


