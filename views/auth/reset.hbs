<section class="auth-hero">
  <div class="auth-container">
    <div class="auth-card">
      <h3 class="text-center mb-3 fw-bold">Reset Password</h3>

      <form method="post" action="/auth/reset/{{token}}">
        <label class="field">
          <span>New Password</span>
          <div class="control">
            <i class="bi bi-lock"></i>
            <input type="password" name="password" placeholder="Enter new password" required>
          </div>
        </label>

        <label class="field">
          <span>Confirm Password</span>
          <div class="control">
            <i class="bi bi-lock"></i>
            <input type="password" name="confirm" placeholder="Confirm new password" required>
          </div>
        </label>

        <button class="btn-primary w-100 mt-3" type="submit">Reset Password</button>
      </form>

      <div class="small text-center mt-3">
        <a href="/auth/login" class="text-rose-600 text-decoration-none">Back to Login</a>
      </div>
    </div>
  </div>
</section>
