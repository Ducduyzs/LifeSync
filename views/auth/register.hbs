<section class="auth-hero">
  <div class="auth-container">
    <div class="brand">
      <div class="brand-icon"><i class="bi bi-flower3"></i></div>
      <h1 class="brand-title">LifeSync</h1>
      <p class="brand-sub">Balance your time & health</p>
    </div>

    <div class="auth-card">
      <div class="tabs">
        <button class="tab" onclick="location.href='/auth/login'">Login</button>
        <button class="tab active">Sign Up</button>
      </div>

      <form method="post" action="/auth/register">
        {{#if error}}
          <div class="alert alert-danger small text-center mb-3">{{error}}</div>
        {{/if}}

        <label class="field">
          <span>Full Name</span>
          <div class="control">
            <i class="bi bi-person"></i>
            <input type="text" name="full_name" placeholder="Enter your full name" required>
          </div>
        </label>

        <label class="field">
          <span>Email</span>
          <div class="control">
            <i class="bi bi-envelope"></i>
            <input type="email" name="email" placeholder="Enter your email" required>
          </div>
        </label>

        <label class="field">
          <span>Password</span>
          <div class="control">
            <i class="bi bi-lock"></i>
            <input type="password" name="password" placeholder="Enter your password" minlength="6" required>
          </div>
        </label>

        <button class="btn-primary w-100 mt-2" type="submit">Create Account</button>
      </form>

      <div class="small text-center mt-3">
        Already have an account? <a href="/auth/login" class="text-rose-600">Login</a>
      </div>
    </div>
  </div>
</section>
